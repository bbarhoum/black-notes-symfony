{{ form_start(form, {method: 'POST', action: path('blog_comment_add', {'slug': post.slug})}) }}

<fieldset>
    <legend>
        <i class="fa fa-comment" aria-hidden="true"></i> New comment
    </legend>
    {{ form_errors(form) }}

    <div class="form-group {% if not form.content.vars.valid %}has-error{% endif %}">
        {{ form_errors(form.content) }}
        {{ form_widget(form.content, {attr: {rows: 5}}) }}
        {{ form_help(form.content) }}
    </div>

    <div class="clearfix">
        <button class="btn btn-primary float-right" type="submit">
            <i class="fa fa-paper-plane" aria-hidden="true"></i> Add comment
        </button>
    </div>
</fieldset>
{{ form_end(form) }}
