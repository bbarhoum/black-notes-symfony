<div class="mt-5 recent-post">
  <h3>Recent posts</h3>
  <hr>
  {% for post in posts %}
    <h5 class="post-title">
      <a href="{{ path('blog_show_post', {slug: post.slug}) }}">
        {{ post.title|capitalize }}
      </a>
    </h5>
    <p class="small">
      By {{ post.createdBy }} on {{ post.createdAt|format_datetime('medium', 'short') }}
    </p>
  {% endfor %}
</div>
