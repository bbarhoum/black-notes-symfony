{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block main %}
  <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
{#        <img src="{{ post.image }}" class="d-block w-100 h-25" alt="...">#}
      </div>
    </div>
  </div>
  <h1>{{ post.title }}</h1>

  <p class="post-metadata">
    <span class="metadata"><i class="fa fa-calendar"></i> {{ post.createdAt|date }}</span>
    <span class="metadata"><i class="fa fa-user"></i> {{ post.createdBy }}</span>
  </p>

  <div class="well">
    <p class="m-b-0"><strong>Summary</strong>: {{ post.description }}</p>
  </div>

  {{ post.content|raw }}
  <div class="clearfix"></div>
  {{ include('blog/_post_tags.html.twig') }}
{% endblock %}

{% block sidebar %}
  <a href="{{ path('post_index') }}" class="btn btn-link btn-lg"> << Back to list</a>
  <a href="{{ path('post_edit', {'id': post.id}) }}" class="btn btn-primary btn-lg">Edit post</a>
{% endblock %}