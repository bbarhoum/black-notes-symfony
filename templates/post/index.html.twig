{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
  <div class="row">
    <h1 class="col">Posts list</h1>
    <div class="col">
      <a href="{{ path('post_new') }}" class="btn btn-success btn-lg float-right">
        <i class="fa fa-plus"></i>
        Create new post
      </a>
    </div>
  </div>
  <table id="post-table" class="table table-striped table-middle-aligned">
    <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Last update</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for post in posts %}
      <tr>
        <td>{{ post.title }}</td>
        <td>{{ post.description }}</td>
        <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
        <td>
          <div class="flex">
            <a href="{{ path('post_show', {'id': post.id}) }}" class="btn btn-sm btn-secondary">
              <i class="fa fa-eye"></i> Show
            </a>
            <a href="{{ path('post_edit', {'id': post.id}) }}" class="btn btn-sm btn-primary">
              <i class="fa fa-edit"></i> Edit
            </a>
          </div>
        </td>
      </tr>
    {% else %}
      <tr>
        <td colspan="9">no records found</td>
      </tr>
    {% endfor %}
    </tbody>
  </table>

{% endblock %}
